<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Suitemedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--start imageview custom-->
    <style name="ShapeImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeImageView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/sizeRadius</item>
        <item name="cornerSizeTopRight">@dimen/sizeRadius</item>
        <item name="cornerSizeBottomRight">@dimen/sizeRadius</item>
        <item name="cornerSizeBottomLeft">@dimen/sizeRadius</item>
    </style>

    <!--end imageview custom-->

    <!--start text custom-->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sizeTextMedium</item>
        <item name="android:textColor">@color/primaryBlack</item>

    </style>

    <style name="Text.White" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sizeTextMedium</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Text.Copyright" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sizeTextSmall</item>
        <item name="android:textColor">@color/secondaryBlack</item>

    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sizeTextLarge</item>
        <item name="android:textColor">@color/secondaryBlack</item>

    </style>

    <style name="Text.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sizeTextExSmall</item>
        <item name="android:textColor">@color/secondaryBlack</item>

    </style>

    <style name="Text.Title.Medium.Black" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sizeTextExMedium</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Text.Title.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sizeTextTitle</item>
        <item name="android:textColor">@color/primaryBlack</item>

    </style>

    <style name="Text.Title.Large.Orange" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sizeTextTitle</item>
        <item name="android:textColor">@color/primaryOrange</item>

    </style>

    <style name="Text.Title.White" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sizeTextLarge</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <!--end text custom-->

    <!--start button custom-->
    <style name="ButtonText">
        <item name="android:textSize">@dimen/sizeTextButton</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonText.Large">
        <item name="android:textSize">@dimen/sizeTextLarge</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--end button custom-->

    <!--start imagepicker-->
    <style name="Theme.Transparent.ImagePicker"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!--end imagepicker-->
</resources>